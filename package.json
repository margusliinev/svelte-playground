{
    "name": "svelte-playground",
    "description": "Svelte Playground is a ready-to-use environment for quick Svelte prototyping and testing.",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/margusliinev/svelte-playground"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "format": "prettier --write .",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:check": "drizzle-kit check",
        "db:push": "drizzle-kit push",
        "db:pull": "drizzle-kit pull"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "5.0.3",
        "@sveltejs/adapter-node": "5.2.12",
        "@sveltejs/kit": "2.20.2",
        "@tailwindcss/vite": "4.0.17",
        "@types/node": "22.13.13",
        "prettier": "3.5.3",
        "prettier-plugin-svelte": "3.3.3",
        "prettier-plugin-tailwindcss": "0.6.11",
        "drizzle-orm": "0.41.0",
        "drizzle-kit": "0.30.5",
        "drizzle-seed": "0.3.1",
        "svelte": "5.25.3",
        "svelte-check": "4.1.5",
        "tailwindcss": "4.0.17",
        "typescript": "5.8.2",
        "mysql2": "3.14.0",
        "vite": "6.2.3"
    }
}
